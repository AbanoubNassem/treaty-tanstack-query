{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2022",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
